<resources>

    <!-- Base application theme. -->

        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
            <item name="actionOverflowButtonStyle">@style/MyCustomTheme.OverFlow</item>
        </style>
    <style name="MyCustomTheme.OverFlow" parent="Base.Widget.AppCompat.ActionButton.Overflow">
    </style>
    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowActionBar">false</item>

    </style>
</resources>
