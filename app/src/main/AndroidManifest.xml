<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shahid.qurantime">
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shahid.qurantime.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shahid.qurantime.MainActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.shahid.qurantime.AllSurahs" />
        <activity
            android:name="com.shahid.qurantime.dialogs.DialogActivity"
            android:theme="@style/DialogTheme" />
        <activity
            android:name="com.shahid.qurantime.dialogs.AddPlaylistDialog"
            android:theme="@style/AppTheme" />
        <activity android:name="com.shahid.qurantime.SurahActivity"></activity>
    </application>

</manifest>